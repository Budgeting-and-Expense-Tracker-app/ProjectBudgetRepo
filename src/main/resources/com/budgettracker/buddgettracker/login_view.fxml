<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="450.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.budgettracker.buddgettracker.LoginController">

    <children>
        <VBox alignment="CENTER" spacing="15" maxWidth="300">
            <Label text="Budget Tracker"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;"
                   textAlignment="JUSTIFY"/>

            <TextField fx:id="emailField"
                       prefWidth="250"
                       promptText="Email"/>

            <PasswordField fx:id="passwordField"
                           prefWidth="250"
                           promptText="Password"/>

            <HBox alignment="CENTER" spacing="15">
                <Button onAction="#handleLogin"
                        prefWidth="100"
                        style="-fx-background-color: BLACK;"
                        text="Log In"
                        textFill="WHITE"/>

                <Button onAction="#goToRegister"
                        prefWidth="100"
                        style="-fx-background-color: BLACK;"
                        text="Sign Up"
                        textFill="WHITE"/>
            </HBox>
        </VBox>
    </children>
</StackPane>
