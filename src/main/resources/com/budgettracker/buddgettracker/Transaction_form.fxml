<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.budgettracker.buddgettracker.TransactionFormController"
      spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

    <!-- Define non-node objects here -->
    <fx:define>
        <ToggleGroup fx:id="typeToggleGroup"/>
    </fx:define>

    <Label text="Add Transaction"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Expense / Income toggle bar -->
    <HBox spacing="0">
        <ToggleButton fx:id="expenseToggle"
                      text="Expense"
                      maxWidth="Infinity"
                      HBox.hgrow="ALWAYS"
                      selected="true"
                      style="-fx-background-radius: 999; -fx-background-color: #111111; -fx-text-fill: white;">
            <toggleGroup>
                <fx:reference source="typeToggleGroup"/>
            </toggleGroup>
        </ToggleButton>

        <ToggleButton fx:id="incomeToggle"
                      text="Income"
                      maxWidth="Infinity"
                      HBox.hgrow="ALWAYS"
                      style="-fx-background-radius: 999; -fx-background-color: #f4f4f6; -fx-text-fill: #333333;">
            <toggleGroup>
                <fx:reference source="typeToggleGroup"/>
            </toggleGroup>
        </ToggleButton>
    </HBox>

    <!-- Amount -->
    <VBox spacing="6">
        <Label text="Amount">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
        <TextField fx:id="amountField"
                   promptText="0.00"
                   style="-fx-background-radius: 10;
                          -fx-background-color: #f5f5f7;
                          -fx-border-radius: 10;
                          -fx-border-color: transparent;"/>
    </VBox>

    <!-- Category -->
    <VBox spacing="6">
        <Label text="Category">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
        <ComboBox fx:id="categoryCombo"
                  promptText="Select category"
                  style="-fx-background-radius: 10;
                         -fx-background-color: #f5f5f7;
                         -fx-border-radius: 10;
                         -fx-border-color: transparent;"/>
    </VBox>

    <!-- Description -->
    <VBox spacing="6">
        <Label text="Description (Optional)">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
        <TextField fx:id="descriptionField"
                   promptText="Enter description"
                   style="-fx-background-radius: 10;
                          -fx-background-color: #f5f5f7;
                          -fx-border-radius: 10;
                          -fx-border-color: transparent;"/>
    </VBox>

    <!-- Date -->
    <VBox spacing="6">
        <Label text="Date">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
        <DatePicker fx:id="datePicker"
                    style="-fx-background-radius: 10;
                           -fx-background-color: #f5f5f7;
                           -fx-border-radius: 10;
                           -fx-border-color: transparent;"/>
    </VBox>

    <!-- Submit button -->
    <Button fx:id="submitButton"
            text="Add Expense"
            maxWidth="Infinity"
            style="-fx-background-color: #050510;
                   -fx-text-fill: white;
                   -fx-background-radius: 999;
                   -fx-font-size: 13;">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Button>

</VBox>
