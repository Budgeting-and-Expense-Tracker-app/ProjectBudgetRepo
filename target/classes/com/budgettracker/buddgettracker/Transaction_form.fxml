<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.budgettracker.buddgettracker.TransactionFormController"
      spacing="12.0" alignment="TOP_LEFT"
      prefWidth="400.0" prefHeight="350.0"
      style="-fx-padding: 15; -fx-background-color: white;">

    <children>

        <Label text="Add Transaction"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Type:"/>
                <ToggleButton fx:id="expenseToggle" text="Expense">
                    <toggleGroup>
                        <ToggleGroup fx:id="typeToggleGroup"/>
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="incomeToggle" text="Income"
                              toggleGroup="$typeToggleGroup"/>
            </children>
        </HBox>

        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Amount:" prefWidth="80"/>
                <TextField fx:id="amountField" promptText="0.00"/>
            </children>
        </HBox>

        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Category:" prefWidth="80"/>
                <ComboBox fx:id="categoryCombo" prefWidth="220"/>
            </children>
        </HBox>

        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Description:" prefWidth="80"/>
                <TextField fx:id="descriptionField" prefWidth="220"
                           promptText="Optional description"/>
            </children>
        </HBox>

        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Date:" prefWidth="80"/>
                <DatePicker fx:id="datePicker" prefWidth="160"/>
            </children>
        </HBox>

        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="submitButton"
                        text="Add Expense"
                        onAction="#handleSubmit"/>
            </children>
        </HBox>

    </children>

</VBox>

