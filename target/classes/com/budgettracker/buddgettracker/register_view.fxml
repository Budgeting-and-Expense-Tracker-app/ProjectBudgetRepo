<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="450" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.budgettracker.buddgettracker.RegisterController">

    <VBox alignment="CENTER" spacing="15">

        <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Create Account" />

        <TextField fx:id="nameField" maxWidth="250" prefWidth="250" promptText="Name" />

        <TextField fx:id="emailField" maxWidth="250" prefWidth="250" promptText="Email" />

        <PasswordField fx:id="passwordField" maxWidth="250" prefWidth="250" promptText="Password" />

        <PasswordField fx:id="confirmPasswordField" maxWidth="250" prefWidth="250" promptText="Confirm Password" />

        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#handleRegister" prefWidth="100" style="-fx-background-color: BlACK;" text="Register" textFill="WHITE" />
            <Button onAction="#goBack" prefWidth="100" style="-fx-background-color: BLACK;" text="Back" textFill="WHITE" />
        </HBox>

    </VBox>
</StackPane>
